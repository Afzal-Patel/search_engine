version: '3.7'

services:
  web:
    build: ./services/web
    command: gunicorn --bind 0.0.0.0:5000 manage:app
    volumes:
      - static_volume:/home/app/web/project/static
        #- ./services/web/:/usr/src/app/
        #- ./services/web/:/home/app/
    ports:
      - 5000
    env_file:
      - ./.env.prod
      - ./.env.prod.db
    depends_on:
      - db
  db:
    build: ./services/db
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    env_file:
      - ./.env.prod.db
  nginx:
    build: ./services/nginx
    volumes:
      - static_volume:/home/app/web/project/static
    ports:
      - 3400:80
    depends_on:
      - web

volumes:
  postgres_data:
  static_volume:

networks:
  default:
    name: novichenko
